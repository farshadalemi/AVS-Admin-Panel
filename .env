# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=AVS Business Assistant Admin Panel
VERSION=1.0.0
DESCRIPTION=Admin Panel API for AVS Business Assistant - AI Voice Assistant Service

# Security
SECRET_KEY=your-super-secret-key-change-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Database Configuration
POSTGRES_SERVER=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=avs_admin
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@avs.com
EMAILS_FROM_NAME=AVS Business Assistant

# Payment Configuration (Stripe example)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# IPCC Integration
IPCC_API_URL=https://your-ipcc-provider.com/api
IPCC_API_KEY=your-ipcc-api-key
IPCC_WEBHOOK_SECRET=your-ipcc-webhook-secret

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Default Admin User
FIRST_SUPERUSER_EMAIL=admin@avs.com
FIRST_SUPERUSER_PASSWORD=admin123
